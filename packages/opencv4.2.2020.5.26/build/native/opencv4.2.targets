<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <ConfigBuild>
    </ConfigBuild>
    <ConfigBuild Condition="($(Configuration.ToLower().IndexOf('debug')) &gt; -1)">Debug</ConfigBuild>
    <ConfigBuild Condition="$(Configuration.ToLower().IndexOf('debug')) == -1">Release</ConfigBuild>
    <BuildSuffix>
    </BuildSuffix>
    <BuildSuffix Condition="'$(ConfigBuild)' == 'Debug'">d</BuildSuffix>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>$(MSBuildThisFileDirectory)\include;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
    </ClCompile>
    <Link>
      <AdditionalDependencies>$(MSBuildThisFileDirectory)\x64\vc14\lib\opencv_world420$(BuildSuffix).lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
  <Target Name="opencv42_redist_AfterBuild" AfterTargets="AfterBuild">
    <Copy SourceFiles="$(MSBuildThisFileDirectory)\x64\vc14\bin\opencv_world420$(BuildSuffix).dll" DestinationFolder="$(TargetDir)" SkipUnchangedFiles="true" />
    <Copy SourceFiles="$(MSBuildThisFileDirectory)\x64\vc14\bin\opencv_videoio_ffmpeg420_64.dll" DestinationFolder="$(TargetDir)" SkipUnchangedFiles="true" />
  </Target>
</Project>